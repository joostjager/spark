{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2022",
    "module": "nodenext",
    "isolatedModules": true,
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": false,
    "noImplicitReturns": false,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    /* Allow implicit any due to generated files. TODO look into resolving
         implicit any for generated files or move them out of the type checks */
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "swc": true,
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
